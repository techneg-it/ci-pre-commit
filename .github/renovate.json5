{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  enabledManagers: [
    'copier',
    'custom.regex',
    'dockerfile',
    'pip_requirements',
  ],
  extends: [
    'github>techneg-it/.github',
    'github>techneg-it/.github:copier',
    ':automergeDigest',
    ':automergeMinor',
    ':semanticPrefixChore',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '.schedule-version',
      ],
      matchStrings: [
        '(?<currentValue>\\S+)\\n',
      ],
      datasourceTemplate: 'github-tags',
      depNameTemplate: 'techneg-it/ci-pre-commit',
    },
  ],
  packageRules: [
    {
      matchFileNames: [
        '.schedule-version',
      ],
      extends: [
        ':semanticPrefixFix',
        'schedule:weekly',
      ],
      commitMessageAction: '',
      commitMessageExtra: '({{prettyNewVersion}})',
      commitMessageTopic: 'Scheduled update',
      minimumReleaseAge: '1 day',
      platformAutomerge: false,
    },
    {
      matchManagers: [
        'dockerfile',
        'pip_requirements',
      ],
      extends: [
        'schedule:weekends',
      ],
    },
    {
      matchDatasources: ['docker'],
      matchPackageNames: ['python'],
      separateMinorPatch: true,
    },
    {
      matchManagers: ['pip_requirements'],
      matchPackageNames: ['!pre-commit'],
      groupName: 'pre-commit dependencies',
    },
  ],
}
